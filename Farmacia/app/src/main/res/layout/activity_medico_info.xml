<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>
    <include layout="@layout/listview_medicos_item"
        android:id="@+id/medico"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/medico_info_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/MedicoEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialidad:"
                android:textSize="17sp"
                android:textColor="#FF000000"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tMedicoEspecialidad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="  · Urología"
                android:padding="1sp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/MedicoTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tlf:"
                android:textColor="#FF000000"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tMedicoTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  · 600692469"
                android:padding="1sp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/MedicoEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#FF000000"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tMedicoEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  · myemail@domain.es"
                android:padding="1sp"
                android:textSize="17sp"/>


            <TextView
                android:id="@+id/MedicoTipo"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo cliente:"
                android:textColor="#FF000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tMedicoTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  · B"
                android:padding="1sp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/MedicoEmpresa"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro/s:"
                android:textColor="#FF000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tMedicoEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  · Hospital general de Alicante"
                android:padding="1sp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/MedicoSector"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:text="Sector:"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tMedicoSector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  · Publico"
                android:padding="1sp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/MedicoHobbys"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:text="Hobby´s:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tMedicoHobbys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="@string/hobbys_medico"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/MedicoDatosInteres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="17sp"
                android:text="Datos de interés:"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tMedicoDatosInteres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:padding="1sp"
                android:text="@string/datos_medico"
                android:textSize="17sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver reportes anteriores"
                android:textAlignment="center"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>