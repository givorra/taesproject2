<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project2.taes.farmacia" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfiguracionActivity"
            android:label="@string/title_activity_configuracion" >
        </activity>
        <activity
            android:name=".MedicoInfoActivity"
            android:label="@string/title_activity_medico_info" >
        </activity>
        <activity
            android:name=".ZonasMedicosActivity"
            android:label="@string/title_activity_zonas_medicos" >
        </activity>
        <activity
            android:name=".ReporteActivity"
            android:label="@string/title_activity_reporte" >
        </activity>
        <activity
            android:name=".AnyadirReporteActivity"
            android:label="@string/title_activity_anyadir__reporte"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project2.taes.farmacia.MainActivity" />
        </activity>
        <activity
            android:name=".ReportesGastosActivity"
            android:label="@string/title_activity_reportes_gastos" >
        </activity>
    </application>

</manifest>
